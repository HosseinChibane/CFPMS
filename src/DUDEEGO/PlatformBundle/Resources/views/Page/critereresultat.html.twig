<section class="cd-gallery" >
    <div class="container cd-gallery">
        <div id="products" class="row list-group">
            {% if listUniversite is defined %}
                    {% for universite in listUniversite %}
                        <div class="item  col-xs-4 col-lg-4">
                            <div class="thumbnail">
                                <img class="group list-group-image" src="{{ universite.url }}" alt="{{ universite.alt }}" />
                                <div class="caption">
                                    <h4 class="group inner list-group-item-heading">
                                        {{ universite.universite.nometablissement }}</h4>
                                        <p class="group inner list-group-item-text">
                                            {{ universite.universite.description|slice(0, 50) ~ '...' }}
                                        </p>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <p class="lead">5 €</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <a class="btn btn-success" href="">Inscription</a>
                                                 <a class="btn btn-success" href="">Détails</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
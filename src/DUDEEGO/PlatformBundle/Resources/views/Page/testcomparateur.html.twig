{% extends "DUDEEGOPlatformBundle::layout.html.twig" %}

{% block title %}
  Comparateur - {{ parent() }}
{% endblock %}

{% block dudeegoplatform_body %}

  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">

      <form id="form_recherche" action="{{ path('dudeego_platform_testFilterComparateur') }}" method="Post">

        <div class="form-group">                                   
          <button type="submit" name="submit-filter" value="filter" class="btn btn-primary" id="filtrer">Appliquer</button>
          <button type="button" class="btn btn-secondary" onclick="">Réinitialiser</button>
        </div>


        <div class="form-group">
          <label for="search">Rechercher</label>
          <input type="text" class="form-control" placeholder="Recherche..." id="search" name="search">
        </div> 

        <div class="form-group">
          <label for="etude"> Durée d'étude</label>
          <div class="checkbox">          
            <label><input type="checkbox" value="">2 ans</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">Entre 2 à 4 ans</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">Plus de 4 ans</label>
          </div>
        </div>

        <div class="form-group">
          <label for="pays">Selectionner un pays</label>
          <select class="form-control" id="pays">
            <option value=""></option>
            <option value="Chypre">Chypre</option>
            <option value="Espagne">Espagne</option>
            <option value="Hongrie">Hongrie</option>
            <option value="Luxembourg">Luxembourg</option>
            <option value="Maroc">Maroc</option>
            <option value="Roumanie">Roumanie</option>
            <option value="Pologne">Pologne</option>
            <option value="Portugal">Portugal</option>
          </select>
        </div>

        <div class="form-group">
          <label for="langue">Selectionner une langue</label>
          <select class="form-control" id="langue">
            <option value=""></option>
            <option value="Anglais">Anglais</option>
            <option value="Espagnol">Espagnol</option>
            <option value="Français">Français</option>
          </select>
        </div>

        <div class="form-group">
          <label for="etablissement">Type d'établissement</label>
          <div class="radio">
            <label><input type="radio" name="etablissement">Tous</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="etablissement">Privé</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="etablissement">Publique</label>
          </div>
        </div>

        <div class="form-group">
          <label for="bourse">Bourse</label>
          <div class="radio">
            <label><input type="radio" name="bourse">Tous</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="bourse">Avec</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="bourse">Sans</label>
          </div>
        </div>

        <div class="form-group">
          <label for="campus">Campus</label>
          <div class="radio">
            <label><input type="radio" name="campus">Tous</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="campus">Avec</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="campus">Sans</label>
          </div>
        </div>

        <div class="form-group">
          <label for="budget">Budget</label>
          <input id="budget" type="range" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]"/>
        </div> 

        <div class="form-group">
          <label for="reussite">Taux de réussite</label>
          <input id="reussite" type="range" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]"/>
        </div> 


        <div class="form-group">
          <label for="emploi">Taux d'employabilité</label>
          <input id="emploi" type="range" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]"/>
        </div> 

        <div class="form-group">
          <label for="salaire">Rémuneration</label>
          <input id="salaire" type="range" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]"/>
        </div> 

      </form>

    </div>
    <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
      <table id="universite" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%" data-order='[[ 1, "asc" ]]' data-page-length='25'>
        <thead>
          <tr>
            <th></th>
            <th>Etablissement</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% if listUniversite is defined %}
            {% for image in listUniversite %}
              <tr>
                <td><img class="media-object img-rounded img-responsive"  src="{{ image.url }}" alt="{{ image.alt }}" width="50" height="50"></td>
                <td> <a href="{{ image.universite.siteinternet }}">{{ image.universite.nometablissement }}</a></td>
                <td>{{ image.universite.description|slice(0, 50) ~ '...'  }}</td>
                <td><button type="button" class="btn btn-default btn-lg btn-block"> Inscription </button>
                  <button type="button" class="btn btn-default btn-lg btn-block"> Détails </button></td>
                </tr>
              {% endfor %}
            {% endif %}
          </tbody>
        </table>
      </div>
      <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
        <table id="favoris" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%" data-order='[[ 1, "asc" ]]' data-page-length='25'>
          <thead>
            <tr>
              <th>Etablissement</th>
            </tr>
          </thead>
          <tbody>
            {% if listUniversite is defined %}
              {% for image in listUniversite %}
                <tr>
                  <td><img class="media-object img-rounded img-responsive"  src="{{ image.url }}" alt="{{ image.alt }}" width="50" height="50"> <a href="{{ image.universite.siteinternet }}">{{ image.universite.nometablissement }}</a></td>
                </tr>
              {% endfor %}
            {% endif %}
          </tbody>
        </table>
        <button type="button" class="btn btn-default btn-lg btn-block"> Comparer </button>
      </div>
    </div>

    <script type="text/javascript">
      $('#universite').DataTable( {
        paging: true,
        responsive: true,
      } );
    </script>

    <script type="text/javascript">
      $('#favoris').DataTable( {
        paging: false,
        responsive: true
      } );
    </script>

    <script type="text/javascript">
        // Instantiate a slider
        var mySlider = $("budget.slider").bootstrapSlider();

        // Call a method on the slider
        var value = mySlider.bootstrapSlider('getValue');

        // For non-getter methods, you can chain together commands
        mySlider
        .bootstrapSlider('setValue', 5)
        .bootstrapSlider('setValue', 7);
      </script>

      <script type="text/javascript">
        // Instantiate a slider
        var mySlider = $("reussite.slider").bootstrapSlider();

        // Call a method on the slider
        var value = mySlider.bootstrapSlider('getValue');

        // For non-getter methods, you can chain together commands
        mySlider
        .bootstrapSlider('setValue', 5)
        .bootstrapSlider('setValue', 7);
      </script>
      <script type="text/javascript">
        // Instantiate a slider
        var mySlider = $("emploi.slider").bootstrapSlider();

        // Call a method on the slider
        var value = mySlider.bootstrapSlider('getValue');

        // For non-getter methods, you can chain together commands
        mySlider
        .bootstrapSlider('setValue', 5)
        .bootstrapSlider('setValue', 7);
      </script>
      <script type="text/javascript">
        // Instantiate a slider
        var mySlider = $("salaire.slider").bootstrapSlider();

        // Call a method on the slider
        var value = mySlider.bootstrapSlider('getValue');

        // For non-getter methods, you can chain together commands
        mySlider
        .bootstrapSlider('setValue', 5)
        .bootstrapSlider('setValue', 7);
      </script>

    {% endblock %}

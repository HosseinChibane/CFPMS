{% extends "DUDEEGOPlatformBundle::layout.html.twig" %}

{% block title %}
    Mes Demandes - {{ parent() }}
{% endblock %}

{% block dudeegoplatform_bodyAbonne %} 
    <!-- Mes Demandes -->
    <div class="col-md-10">
        <table id="demandeInsciption" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Etat de la demande</th>
                    <th>Date de création</th>
                    <th>Date de mise à jours</th>
                    <th>Etat de la vérification</th>
                </tr>
            </thead>
            <tbody>
                {% if listDemandeInscription is defined %}
                    {% for rowDemande in listDemandeInscription %}
                        <tr>
                            <td>rowDemande.etat</td>
                            <td>rowDemande.creation</td>
                            <td>rowDemande.miseajour</td>
                            <td>rowDemande.verifier</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>

    <script type="text/javascript" class="init">
        $(document).ready(function() {
            var table = $('#demandeInsciption').DataTable( {
                responsive: true
            } );
            new $.fn.dataTable.FixedHeader( table );
        } );
    </script>
{% endblock %}